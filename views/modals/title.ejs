
<script>
    $(document).ready(function() {

        $('#btnAddTitle').click(function(){
            $('#modalAddTitle').modal('hide');
            var title = $("#input_titleDoc").val();
            var authors = $("#input_authors").val();
            var useDate = $("#checkbox_date").prop('checked');
            var date = $("#input_date").val();

            var data = {kind: 'title', title: title, authors: authors, useDate: useDate, date: date};

            var html = "<div id='title' class='title latex_element well '>"+
                            "<div class='cont_label_well'><span class='label_well'>Title</span></div>"+
                            "<div class='text-center'><h2>"+title+"</h2></div>"+
                            "<div class='text-center'><h3>"+authors+"</h3></div>"
            if (useDate)
            {
                html += "<div class='text-center'><h3>"+date+"</h3></div>"
            }
            html += "<div class='btn-group'>"+
                        "<button type='button' class='btn btn-default' data-toggle='modal' data-target='#modalAddTitle' title='Edit'>" +
                            "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>" +
                        "</button>"+
                        "<button type='button' class='btn btn-danger delete' data-id='title' title='Delete'>" +
                            "<span class='glyphicon glyphicon-trash' aria-hidden='true' ></span>" +
                        "</button>"+
                    "</div>"+
                "</div>"

            $('#title').remove();
            $('#parteFija').prepend(html);
            $('#title').data('args', data);
            bind();
        });

    });
</script>

<div class="modal fade" id="modalAddTitle" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add title</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="input_titleDoc">Title</label>
                    <input type="text" class="form-control" id="input_titleDoc" placeholder="Title"  >
                    <label for="input_authors">Authors</label>
                    <input type="text" class="form-control" id="input_authors" placeholder="Rahid, Sheldon, ..."  >
                    <label class="form-check-label">
                        Date
                        <input class="form-check-input" type="checkbox" value="" id="checkbox_date">
                    </label>
                    <p>Date: <input type="text" id="input_date" size="30"></p>
                    <p>Format options:<br>
                        <select id="format">
                            <option value="MM d, yy">Default - MM d, yy</option>
                            <option value="yy-mm-dd">ISO 8601 - yy-mm-dd</option>
                            <option value="d M, y">Short - d M, y</option>
                            <option value="d MM, y">Medium - d MM, y</option>
                            <option value="DD, d MM, yy">Full - DD, d MM, yy</option>
                            <option value="&apos;day&apos; d &apos;of&apos; MM &apos;in the year&apos; yy">With text - 'day' d 'of' MM 'in the year' yy</option>
                        </select>
                    </p>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="btnAddTitle">Add</button>
            </div>
        </div>
    </div>
</div>